{
	"name": "simplicityhl-lsp",
	"description": "A language server for SimplicityHL language",
	"publisher": "distributed-lab",
	"license": "MIT",
	"displayName": "SimplicityHL language server extension",
	"repository": {
		"type": "git",
		"url": "https://github.com/distributed-lab/simplicityhl-lsp-vscode"
	},
	"version": "1.0.2",
	"categories": [],
	"keywords": [
		"Simplicity",
		"SimplicityHL"
	],
	"engines": {
		"vscode": "^1.66.0"
	},
	"activationEvents": [
		"onLanguage:simplicityhl"
	],
	"main": "dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "simplicityhl",
				"extensions": [
					".simf"
				]
			}
		]
	},
	"scripts": {
		"compile": "npm run check-types && node esbuild.js",
		"check-types": "tsc --noEmit",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"vscode:prepublish": "npm run package",
		"package": "npm run check-types && node esbuild.js --production",
    "vsce-package": "vsce package"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"@vscode/vsce": "^3.2.1",
		"esbuild": "^0.25.9",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"ts-loader": "^9.5.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"@types/vscode": "^1.66.0",
		"@vscode/test-electron": "^2.3.9",
		"vscode-languageclient": "^9.0.1"
	}
}
